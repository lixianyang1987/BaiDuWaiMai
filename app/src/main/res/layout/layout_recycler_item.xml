<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteSmoke"
    >

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="80dp"
        >

        <ImageView
            android:id="@+id/img_ct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/thumbnails" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_ct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="丽华快餐"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/lv_1"
                android:src="@drawable/waimai_shoplist_item_icon_star_no"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/lv_2"
                android:src="@drawable/waimai_shoplist_item_icon_star_no"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/lv_3"
                android:src="@drawable/waimai_shoplist_item_icon_star_no"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/lv_4"
                android:src="@drawable/waimai_shoplist_item_icon_star_no"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/lv_5"
                android:src="@drawable/waimai_shoplist_item_icon_star_no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="12dp"
                android:id="@+id/tv_xl"
                android:text="月售1000份"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sc_content"
            android:textSize="12dp"
            android:text="起送￥30|配送￥6|平均45分钟"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="right"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/ebpay_bg_checkbox_normal"
            android:gravity="center"
            android:text="劵"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/ebpay_bg_checkbox_normal"
            android:gravity="center"
            android:text="票"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/ebpay_bg_checkbox_normal"
            android:gravity="center"
            android:text="付"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp" />
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/ebpay_bg_checkbox_normal"
            android:gravity="center"
            android:text="赔"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp" />
    </LinearLayout>
</LinearLayout>
